@model EmployeeMangementSystem.Models.AddEmployeeViewModel

<h1>Add employees</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" asp-for="Email" />
    </div>

    <div class="mt-3">
        <label class="form-label">Salary</label>
        <input type="number" class="form-control" asp-for="Salary" />
    </div>

    <div class="mt-3">
        <label class="form-label">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" />
    </div>

    <div class="mt-3">
        <label class="form-label">Department</label>
        <input type="text" class="form-control" asp-for="Department" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>


</form>