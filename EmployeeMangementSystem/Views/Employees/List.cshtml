@{
}

@model List<EmployeeMangementSystem.Models.Entities.Employee>

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Salary</th>
            <th>Date Of Birth</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach( var employee in Model)
{
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.DateOfBirth.ToString("dd-MM-yyyy")</td>
                    <td>@employee.Department</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">Edit</a>
                        <form asp-action="Delete" asp-controller="Employees" method="post" class="d-inline">
                            <input type="hidden" name="Id" value="@employee.Id" />
                            <button type="submit" class="btn btn-danger ms-3">Delete</button>
                        </form>

                    </td>
                </tr>
}
    </tbody>
</table>